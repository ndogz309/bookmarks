
<% if user_signed_in? %>

<% if @links.any? %>
<div id="links" class="transitions-enabled">
  <% @links.each do |link| %>
    <div class="box panel panel-default">
     
  <div class="panel-heading center">
<p> <%=h link_to truncate(link.title, :length => 125),link %></p>
  </div>

      <div class="panel-body">
        <% if link.user == current_user %>
          <div class="actions">
            <%= link_to link, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
        
      </div>
    </div>
  <% end %>
</div>

<%else%>

<div class="jumbotron center">
  <p>No shit saved yet</p>
  <p>
    <%= link_to new_link_path do %>
      <span class="glyphicon glyphicon-plus"></span> New Link
    <% end %>
  </p>
</div>

<% end %>

<%else%>

<%= render 'pages/home' %>


<% end %>